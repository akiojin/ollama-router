{
  "$schema": "https://raw.githubusercontent.com/twelvelabs/gh-repo-config/main/schema/branch-protection.json",
  "_comment": "developブランチ: 全てのCIチェック必須 + 直接コミット禁止（PR必須）",
  "required_status_checks": {
    "strict": true,
    "checks": [
      { "context": "Tasks Completion Check" },
      { "context": "Commit Message Lint" },
      { "context": "Markdown Lint" },
      { "context": "Rust Format & Clippy" },
      { "context": "Rust (fmt/clippy/test) ubuntu-latest" },
      { "context": "Rust (fmt/clippy/test) macos-latest" },
      { "context": "Rust (fmt/clippy/test) windows-latest" },
      { "context": "Rust Tests (ubuntu-latest)" },
      { "context": "Rust Tests (windows-latest)" },
      { "context": "OpenAI API Compatibility Tests" },
      { "context": "C++ Node (build & test)" },
      { "context": "C++ Tests (Ubuntu)" },
      { "context": "Coverage (Rust)" },
      { "context": "Coverage (C++)" }
    ]
  },
  "enforce_admins": false,
  "required_pull_request_reviews": null,
  "restrictions": null,
  "required_linear_history": true,
  "allow_force_pushes": false,
  "allow_deletions": false,
  "block_creations": false,
  "required_conversation_resolution": true,
  "lock_branch": false,
  "allow_fork_syncing": false
}
